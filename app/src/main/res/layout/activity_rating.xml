<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcilab.projects.stressblocks.RatingActivity">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="181dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textViewStresslevel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/seekBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChooseValueText"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <Button
        android:text="@string/buttonResumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:id="@+id/buttonResumeToGame"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <Button
        android:text="@string/surveyButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/buttonStartSurvey"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <TextView
        android:text="@string/stresslevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStresslevel"
        android:textAlignment="textEnd"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

</RelativeLayout>
