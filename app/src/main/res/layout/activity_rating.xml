<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hcilab.projects.stressblocks.RatingActivity">


    <RadioGroup
        android:id="@+id/radio_group_stress_level"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your stress level?"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radio_not_at_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="very slightly or not at all" />

        <RadioButton
            android:id="@+id/radio_slightly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slightly" />

        <RadioButton
            android:id="@+id/radio_somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="somewhat" />

        <RadioButton
            android:id="@+id/radio_moderately"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="moderately" />

        <RadioButton
            android:id="@+id/radio_extremely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extremely" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonPlayTetris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radio_group_stress_level"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp"
        android:enabled="false"
        android:text="@string/buttonPlayGame" />

    <Button
        android:id="@+id/buttonExitApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radio_group_stress_level"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp"
        android:enabled="false"
        android:text="@string/buttonExitText" />

</RelativeLayout>
